{
    "name": "mindplay/composer-locator",
    "type": "composer-plugin",
    "description": "Locates Composer package root folders by package name",
    "license": "MIT",
    "autoload": {
        "classmap": [
            "src/"
        ]
    },
    "require": {
        "composer-plugin-api": "^1"
    },
    "require-dev": {
        "composer/composer": "^1"
    },
    "extra": {
        "class": "mindplay\\composer_locator\\Plugin"
    }
}
